{% extends 'master' %}

{% block scripts %}
<script src="/scripts/popup_reg.js"></script>
{% endblock %}

{% block content %}
<div class="container">
  {{ form.open({action: 'BrainstormController.doRegister', class: 'form-signin' }) }}
    <div class="panel panel-success">
                <div class="panel-heading">Regisztráció</div>
    {% if errorMessage %}
      <div class="bg-danger text-white text-xs-center my-1 p-1">
        {{ errorMessage }}
      </div>
      {% endif %}

    {{ csrfField }}

    <div class="form-group">
      {{ form.text('name', null, { class: 'form-control', placeholder: 'Név', required: 'true', autofocus: 'true' }) }}
    </div>

    <div class="form-group">
      {{ form.text('email', null, { class: 'form-control', placeholder: 'Email cím', required: 'true'}) }}
    </div>

    <div class="form-group">
      {{ form.password('password', null, { class: 'form-control', placeholder: 'Jelszó', required: 'true' }) }}
    </div>

    {{ form.submit('Regisztráció', 'register', { class: 'btn btn-lg "btn btn-default" btn-block' }) }}

  {{ form.close() }}
</div>
{% endblock %}